    data_encoded = pd.get_dummies(data, columns=['Product Category', 'Payment Method', 'Gender'], drop_first=True)
    data_encoded = data_encoded.drop(['Customer ID', 'Customer Name', 'Purchase Date'], axis=1)

# Define features (X_nn) and target (y_nn) for the neural network
X_nn = data_encoded[['Product Price', 'Quantity', 'Total Purchase Amount', 'Customer Age', 'Returns']]
y_nn = data_encoded['Churn'].values.reshape(-1, 1) # Reshape for neural network input

# Scale the features
scaler_nn = StandardScaler()
X_nn_scaled = scaler_nn.fit_transform(X_nn)

# Split data into training and testing sets
X_train_nn, X_test_nn, y_train_nn, y_test_nn = train_test_split(X_nn_scaled, y_nn, test_size=0.2, random_state=42)

print("Data prepared for Neural Network:")
print(f"X_train_nn shape: {X_train_nn.shape}")
print(f"y_train_nn shape: {y_train_nn.shape}")






# Initialize the Neural Network
input_size_nn = X_train_nn.shape[1]
hidden_size_nn = 10 # You can adjust this
output_size_nn = 1

neural_net = NeuralNetwork(input_size_nn, hidden_size_nn, output_size_nn)

# Train the neural network
epochs = 100 # Number of training iterations (reduced for much faster execution)
learning_rate = 0.1 # Learning rate

print("\nStarting Neural Network training...")
neural_net.train(X_train_nn, y_train_nn, epochs, learning_rate)

# Make predictions on the test set
y_pred_nn = (neural_net.forward(X_test_nn) > 0.5).astype(int)

# Evaluate the model
accuracy_nn = accuracy_score(y_test_nn, y_pred_nn)
print(f"\nNeural Network Accuracy: {accuracy_nn:.4f}")

print("\nNeural Network Classification Report:")
print(classification_report(y_test_nn, y_pred_nn))

print("\nNeural Network Confusion Matrix:")
print(confusion_matrix(y_test_nn, y_pred_nn))
